
<p><strong>物件名:</strong><%= @estate.name %></p>
<p><strong>賃料:</strong><%= @estate.rent %></p>
<p><strong>住所:</strong><%= @estate.address %></p>
<p><strong>築年数:</strong><%= @estate.age %></p>
<p><strong>備考:</strong><%= @estate.memo %></p>

<hr>
<% if @first_nearest_station.present? %>
<h2>最寄り駅1</h2>
<p><strong>路線名:</strong><%= @first_nearest_station.line %></p>
<p><strong>駅名:</strong><%= @first_nearest_station.station_name %></p>
<p><strong>徒歩分数:</strong><%= @first_nearest_station.distance_on_foot %></p>

<% end %>
<% if @second_nearest_station.present? %>
<h2>最寄り駅2</h2>
<p><strong>路線名:</strong><%= @second_nearest_station.line %></p>
<p><strong>駅名:</strong><%= @second_nearest_station.station_name %></p>
<p><strong>徒歩分数:</strong><%= @second_nearest_station.distance_on_foot %></p>

<% end %>

<p><%= link_to( '編集', edit_estate_path(@estate.id)) %>｜<%= link_to( "戻る", estates_path) %></p>