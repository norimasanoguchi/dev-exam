<h1>登録</h1>

<%= render 'errormsg' %>

<h2>物件登録</h2>
<%= form_for (@estate) do |f| %>
  <p><%= f.label :物件名 %><br>
  <%= f.text_field :name %></p>
  
  <p><%= f.label :賃料 %><br>
  <%= f.number_field :rent %>円</p>
  
  <p><%= f.label :住所 %><br>
  <%= f.text_field :address %></p>
  
  <p><%= f.label :築年数 %><br>
  <%= f.number_field :age %>年</p>
  
  <p><%= f.label :備考 %><br>
  <%= f.text_area :memo %></p>
  
  <hr>
  
   <%= f.fields_for :nearest_stations do |s| %>
    <h3>最寄り駅<%= s.index + 1 %></h3>
  
    <p><%= s.label :路線名 %><br>
    <%= s.text_field :line %></p>
    
    <p><%= s.label :駅名 %><br>
    <%= s.text_field :station_name %></p>
    
    <p><%= s.label :徒歩分数 %><br>
    <%= s.number_field :distance_on_foot %></p>
    
  <% end %>
  
  <p><%= f.submit("登録する") %></p>

<% end %>
<%= link_to( "戻る", estates_path) %>